{
  "name": "ae",
  "version": "1.0.0-beta.0",
  "description": "a fast development framework for electron",
  "main": "dist/electron/bootstrap.js",
  "license": "ISC",
  "author": "apiTest-team,Inc <876771120@qq.com>",
  "keywords": [
    "electron",
    "fast electron",
    "autowired"
  ],
  "private": true,
  "workspaces": {
    "nohoist": [
      "electron"
    ]
  },
  "scripts": {
    "dev": "vite",
    "clear": "lerna clean && rm -rf ./node_modules",
    "build": "vue-tsc --noEmit && vite build && electron-builder",
    "build:renderer": "vue-tsc --noEmit --skipLibCheck && vite build",
    "build-w": "vue-tsc --noEmit && vite build  && electron-builder -w --ia32",
    "build-w-64": "vue-tsc --noEmit && vite build  && electron-builder -w --x64",
    "build-m": "vue-tsc --noEmit && vite build &&  && electron-builder -m",
    "build-m-arm64": "vue-tsc --noEmit && vite build  && electron-builder -m --arm64",
    "build-l": "vue-tsc --noEmit && vite build  && electron-builder -l"
  },
  "env": {
    "VITE_DEV_SERVER_HOST": "127.0.0.1",
    "VITE_DEV_SERVER_PORT": 3344
  },
  "dependencies": {
    "@electron-boot/core": "^1.0.0-beta.0",
    "@electron-boot/updater": "^1.0.0-beta.0"
  },
  "devDependencies": {
    "@electron-boot/vite-plugin-electron": "^1.0.0-beta.0",
    "@types/node": "^18.0.1",
    "@vitejs/plugin-vue": "^3.0.1",
    "electron": "^19.0.10",
    "electron-builder": "^23.1.0",
    "pinia": "^2.0.14",
    "sass": "^1.53.0",
    "typescript": "^4.7.4",
    "unplugin-auto-import": "^0.9.2",
    "unplugin-vue-components": "^0.21.1",
    "vite": "^3.0.3",
    "vite-plugin-electron-renderer": "^0.8.1",
    "vite-plugin-vue-setup-extend-plus": "^0.1.0",
    "vue": "^3.2.37",
    "vue-router": "^4.1.1",
    "vue-tsc": "^0.38.3"
  },
  "build": {
    "productName": "ae",
    "appId": "com.bianmapai.ae",
    "asar": false,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist"
    ],
    "extraResources": [
      {
        "from": "./build/extraResources",
        "to": "extraResources"
      }
    ],
    "mac": {
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "artifactName": "${productName}-windows-${version}.${ext}",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "artifactName": "${productName}-linux-${version}.${ext}",
      "target": [
        "deb"
      ],
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./build/icons/icon.ico",
      "uninstallerIcon": "./build/icons/icon.ico",
      "installerHeaderIcon": "./build/icons/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ae"
    }
  }
}
